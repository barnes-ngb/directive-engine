{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/directives.schema.json",
  "title": "DirectivesOutput",
  "type": "object",
  "required": [
    "jobId",
    "generatedAt",
    "steps",
    "metrics"
  ],
  "properties": {
    "jobId": {
      "type": "string"
    },
    "generatedAt": {
      "type": "string"
    },
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "stepId",
          "partId",
          "actions",
          "status"
        ],
        "properties": {
          "stepId": {
            "type": "string"
          },
          "partId": {
            "type": "string"
          },
          "priority": {
            "type": "integer"
          },
          "status": {
            "type": "string",
            "enum": [
              "ok",
              "needs_review",
              "blocked"
            ]
          },
          "reason": {
            "type": "string"
          },
          "actions": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "type",
                "frame"
              ],
              "properties": {
                "type": {
                  "type": "string",
                  "enum": [
                    "translate",
                    "rotate",
                    "rotate_index"
                  ]
                },
                "frame": {
                  "type": "string",
                  "enum": [
                    "world",
                    "part"
                  ]
                },
                "vectorMm": {
                  "type": "array",
                  "items": {
                    "type": "number"
                  },
                  "minItems": 3,
                  "maxItems": 3
                },
                "axis": {
                  "type": "string",
                  "enum": [
                    "x",
                    "y",
                    "z"
                  ]
                },
                "degrees": {
                  "type": "number"
                },
                "index": {
                  "type": "integer"
                }
              }
            }
          },
          "verification": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "rescan",
                  "measure"
                ]
              },
              "passIfMaxDeviationMm": {
                "type": "number",
                "minimum": 0
              }
            }
          },
          "notes": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "metrics": {
      "type": "object",
      "required": [
        "beforeMaxDeviationMm",
        "afterMaxDeviationMm"
      ],
      "properties": {
        "beforeMaxDeviationMm": {
          "type": "number"
        },
        "afterMaxDeviationMm": {
          "type": "number"
        }
      }
    }
  }
}
