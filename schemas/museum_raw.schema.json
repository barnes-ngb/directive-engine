{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://directive-engine.example/schemas/museum_raw.schema.json",
  "title": "Directive Engine - Museum Raw Export v0.1",
  "description": "Raw export format from Grasshopper containing anchors and part geometry for alignment and directive generation.",
  "type": "object",
  "additionalProperties": false,
  "required": ["dataset_id", "measured_at", "anchors", "parts"],
  "properties": {
    "dataset_id": {
      "type": "string",
      "minLength": 1,
      "description": "Unique identifier for this dataset export."
    },
    "measured_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of when measurements were taken."
    },
    "anchors": {
      "type": "array",
      "minItems": 3,
      "items": { "$ref": "#/$defs/Anchor" },
      "description": "Anchor point pairs for rigid alignment (minimum 3 for rigid transform)."
    },
    "parts": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/RawPart" },
      "description": "Parts with nominal and scanned geometry."
    }
  },
  "$defs": {
    "Vec3mm": {
      "type": "array",
      "minItems": 3,
      "maxItems": 3,
      "items": { "type": "number" },
      "description": "3D point in millimeters: [x, y, z]."
    },
    "Line3mm": {
      "type": "object",
      "additionalProperties": false,
      "required": ["p0", "p1"],
      "properties": {
        "p0": { "$ref": "#/$defs/Vec3mm" },
        "p1": { "$ref": "#/$defs/Vec3mm" }
      },
      "description": "3D line segment defined by two endpoints in mm."
    },
    "Anchor": {
      "type": "object",
      "additionalProperties": false,
      "required": ["anchor_id", "model_xyz_mm", "scan_xyz_mm"],
      "properties": {
        "anchor_id": {
          "type": "string",
          "minLength": 1,
          "description": "Unique identifier for this anchor point."
        },
        "model_xyz_mm": {
          "$ref": "#/$defs/Vec3mm",
          "description": "Point in model/nominal coordinate frame."
        },
        "scan_xyz_mm": {
          "$ref": "#/$defs/Vec3mm",
          "description": "Corresponding point in scan/as-built coordinate frame."
        }
      }
    },
    "RawPart": {
      "type": "object",
      "additionalProperties": false,
      "required": ["part_id", "nominal_line_mm", "scan_line_mm", "pose_confidence"],
      "properties": {
        "part_id": {
          "type": "string",
          "minLength": 1,
          "description": "Unique identifier for this part."
        },
        "nominal_line_mm": {
          "$ref": "#/$defs/Line3mm",
          "description": "Part geometry in model/nominal frame as a line segment."
        },
        "scan_line_mm": {
          "$ref": "#/$defs/Line3mm",
          "description": "Part geometry in scan/as-built frame as a line segment."
        },
        "pose_confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Confidence score for the pose measurement (0-1)."
        }
      }
    }
  }
}
